{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "sh -c 'npx prisma migrate deploy && node seed-database.js && npm start'",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}